<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFMCSample.Views.FirstPage">
  <StackLayout>
    <Label Text="This page is created by Xaml, Xamarin.Forms and MVVMCross." VerticalOptions="Center" HorizontalOptions="Center" />
    <Button x:Name="Button1"   Text="Click Me!!!!!!"  Command="{Binding Button1_ClickedEvent}" BackgroundColor="Lime"/>
    <Label x:Name="CountLabel" Text="{Binding CountLabel}" VerticalOptions="Center" HorizontalOptions="Center" />
    <Button x:Name="MoveToSecond" Text="List View Sample" Command="{Binding MoveToSecond}" BackgroundColor="Red"/>
    <Button x:Name="MoveToThird" Text="Web View Sample" Command="{Binding MoveToThird}" BackgroundColor="Purple"/>
  </StackLayout>
</ContentPage>