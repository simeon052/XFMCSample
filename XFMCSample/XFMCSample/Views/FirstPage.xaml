<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFMCSample.Views.FirstPage">
  <StackLayout>
    <Label Text="This page is created by Xaml." VerticalOptions="Center" HorizontalOptions="Center" />
    <Button x:Name="Button1"   Text="Click Me!!!!!!"  Command="{Binding Button1_ClickedEvent}"/>
    <Label x:Name="CountLabel" Text="{Binding CountLabel}" VerticalOptions="Center" HorizontalOptions="Center" />
  </StackLayout>
</ContentPage>